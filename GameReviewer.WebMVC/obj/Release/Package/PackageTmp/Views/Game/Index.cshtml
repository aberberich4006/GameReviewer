@model IEnumerable<GameReview.Models.GameListItem>

@{
    ViewBag.Title = "Index";
}

<h2>List of Games</h2>

<p>
    @Html.ActionLink("Create New", "Create","", new { @style = "color: black;" })
</p>
<table class="table" style="font-family: 'Times New Roman', Times, serif; font-weight: bolder; font-size: large;">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @*<td>
            @Html.DisplayFor(modelItem => item.GameId)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.CreatedUtc)
        </td>*@
    <td>
        <button type="button" class="btn btn-success">
            @Html.ActionLink("Edit", "Edit", new { id = item.GameId }, new { @style = "color: white" })
        </button>
        <button type="button" class="btn btn-primary">
            @Html.ActionLink("Details", "Details", new { id = item.GameId }, new { @style = "color: white" })
        </button>
        <button type="button" class="btn btn-danger">
            @Html.ActionLink("Delete", "Delete", new { id = item.GameId }, new { @style = "color: white" })
        </button>
    </td>
</tr>
    }

</table>
