@model IEnumerable<GameReview.Data.CategoryListItem>

@{
    ViewBag.Title = "Index";
}

<h2>List of Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @style = "color: black;" })
</p>
<table class="table" style="font-family: 'Times New Roman', Times, serif; font-weight: bolder; font-size: large;">
    <tr>
        @*
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button type="button" class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @style = "color: white" })
                </button>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @style = "color: white" })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @style = "color: white" })
                </button>
            </td>
        </tr>
    }

</table>
