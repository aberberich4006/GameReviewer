@model IEnumerable<GameReview.Data.UserReviewListItem>

@{
    ViewBag.Title = "Index";
}

<h2>List of Game Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @style = "color: black;" })
</p>
<table class="table" style="font-family: 'Times New Roman', Times, serif; font-weight: bolder; font-size: large;">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.UserGameReviewId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Game)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.UserGameReviewId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Game)
            </td>
            <td>
                <button type="button" class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserGameReviewId }, new { @style = "color: white" })
                </button>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Details", "Details", new { id = item.UserGameReviewId }, new { @style = "color: white" })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserGameReviewId }, new { @style = "color: white" })
                </button>
            </td>
        </tr>
    }

</table>
