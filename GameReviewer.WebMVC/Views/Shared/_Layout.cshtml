<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link rel="stylesheet" href="~/Content/Site.css" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: transparent;">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Game Reviews Galore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style="color: black;" })
            </div>
            <div class="navbar-collapse collapse" style="background-color: transparent;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home",new { area = ""}, new { @style = "color: black;" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Games", "Index", "Game", new { area = "" }, new { @style = "color: black;" })</li>
                        <li>@Html.ActionLink("Categories", "Index", "Category", new { area = "" }, new { @style = "color: black;" })</li>
                        <li>@Html.ActionLink("Game Reviews", "Index", "UserGameReview", new { area = "" }, new { @style = "color: black;" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: transparent;">
        @RenderBody()
        <hr />
        <footer>
            © 2020 - Game Reviews Galore
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
